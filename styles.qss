}

QComboBox QAbstractItemView {
    background-color: #1E1E1E;
    border: 1px solid #424242;
    border-radius: 4px;
    color: rgba(255, 255, 255, 0.87);
    selection-background-color: rgba(156, 39, 176, 0.3);
    selection-color: rgba(255, 255, 255, 0.87);
    padding: 4px;
}

/* Диалог - Material Design */
QDialog {
    background-color: #121212;
    color: rgba(255, 255, 255, 0.87);
}

QDialogButtonBox QPushButton {
    min-width: 80px;
    padding: 8px 20px;
    text-transform: uppercase;
    font-weight: 500;
    letter-spacing: 0.5px;
    border-radius: 6px;
    font-family: "Roboto", "Segoe UI", "SF Pro Display", "Helvetica Neue", "Arial", sans-serif;
    /* Улучшение рендеринга текста */
    -qt-style-features: "FontAntialiasing";
}

QDialogButtonBox QPushButton[text="OK"] {
    background-color: #9C27B0;
    color: #FFFFFF;
    border: none;
}

QDialogButtonBox QPushButton[text="OK"]:hover {
    background-color: #7B1FA2;
}

QDialogButtonBox QPushButton[text="OK"]:pressed {
    background-color: #6A1B9A;
}

QDialogButtonBox QPushButton[text="Cancel"] {
    background-color: transparent;
    color: #BB86FC;
    border: none;
}

QDialogButtonBox QPushButton[text="Cancel"]:hover {
    background-color: rgba(187, 134, 252, 0.12);
}

QDialogButtonBox QPushButton[text="Cancel"]:pressed {
    background-color: rgba(187, 134, 252, 0.24);
}

/* Метки - Material Design */
QLabel {
    color: rgba(255, 255, 255, 0.87);
    background-color: transparent;
    font-family: "Roboto", "Segoe UI", "SF Pro Display", "Helvetica Neue", "Arial", sans-serif;
    font-size: 14px;
    font-weight: 400;
    /* Улучшение рендеринга текста */
    -qt-style-features: "FontAntialiasing";
}

QLabel#TimeoutLabel {
    color: rgba(255, 255, 255, 0.7);
    font-size: 13px;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-weight: 500;
    padding-right: 12px;
    min-width: 80px;
    /* Выравнивание по центру вертикально с дорожкой слайдера */
    padding-top: 0px;
    padding-bottom: 0px;
    margin: 0px;
    /* Улучшение рендеринга текста */
    -qt-style-features: "FontAntialiasing";
}

QLabel#CopyrightLabel {
    color: rgba(255, 255, 255, 0.54);
    font-size: 12px;
}

/* Меню - Material Design */
QMenuBar {
    background-color: #1E1E1E;
    color: rgba(255, 255, 255, 0.87);
    border-bottom: 1px solid #424242;
    padding: 4px;
}

QMenuBar::item {
    background-color: transparent;
    padding: 8px 16px;
    border-radius: 4px;
}

QMenuBar::item:selected {
    background-color: rgba(187, 134, 252, 0.12);
    color: #BB86FC;
}

QMenu {
    background-color: #1E1E1E;
    border: 1px solid #424242;
    color: rgba(255, 255, 255, 0.87);
    padding: 8px;
}

QMenu::item {
    padding: 12px 24px;
    border-radius: 4px;
}

QMenu::item:selected {
    background-color: rgba(156, 39, 176, 0.2);
    color: #BB86FC;
}

/* Строка состояния - Material Design */
QStatusBar {
    background-color: #1E1E1E;
    color: rgba(255, 255, 255, 0.54);
    border-top: 1px solid #424242;
    padding: 4px;
}

/* Скроллбары - Material Design */
QScrollBar:vertical {
    background-color: #1E1E1E;
    width: 12px;
    border: none;
    border-radius: 6px;
    margin: 0px;
}

QScrollBar::handle:vertical {
    background-color: #424242;
    border-radius: 6px;
    min-height: 30px;
    margin: 2px;
}

QScrollBar::handle:vertical:hover {
    background-color: #9C27B0;
}

QScrollBar::add-line:vertical,
QScrollBar::sub-line:vertical {
    height: 0px;
}

QScrollBar:horizontal {
    background-color: #1E1E1E;
    height: 12px;
    border: none;
    border-radius: 6px;
    margin: 0px;
}

QScrollBar::handle:horizontal {
    background-color: #424242;
    border-radius: 6px;
    min-width: 30px;
    margin: 2px;
}

QScrollBar::handle:horizontal:hover {
    background-color: #9C27B0;
}

QScrollBar::add-line:horizontal,
QScrollBar::sub-line:horizontal {
    width: 0px;
}

/* Сообщения - Material Design */
QMessageBox {
    background-color: #121212;
    color: rgba(255, 255, 255, 0.87);
}

QMessageBox QPushButton {
    min-width: 80px;
    padding: 8px 20px;
    text-transform: uppercase;
    font-weight: 500;
    letter-spacing: 0.5px;
    border-radius: 6px;
    font-family: "Roboto", "Segoe UI", "SF Pro Display", "Helvetica Neue", "Arial", sans-serif;
    /* Улучшение рендеринга текста */
    -qt-style-features: "FontAntialiasing";
}

QMessageBox QPushButton[text*="OK"],
QMessageBox QPushButton[text*="Yes"] {
    background-color: #9C27B0;
    color: #FFFFFF;
    border: none;
}

QMessageBox QPushButton[text*="OK"]:hover,
QMessageBox QPushButton[text*="Yes"]:hover {
    background-color: #7B1FA2;
}

QMessageBox QPushButton[text*="OK"]:pressed,
QMessageBox QPushButton[text*="Yes"]:pressed {
    background-color: #6A1B9A;
}

QMessageBox QPushButton[text*="Cancel"],
QMessageBox QPushButton[text*="No"] {
    background-color: transparent;
    color: #BB86FC;
    border: none;
}

QMessageBox QPushButton[text*="Cancel"]:hover,
QMessageBox QPushButton[text*="No"]:hover {
    background-color: rgba(187, 134, 252, 0.12);
}

QMessageBox QPushButton[text*="Cancel"]:pressed,
QMessageBox QPushButton[text*="No"]:pressed {
    background-color: rgba(187, 134, 252, 0.24);
}
