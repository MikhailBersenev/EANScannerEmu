    min-width: 120px;
    font-size: 16px;
}

QComboBox:hover {
    border-bottom: 2px solid #9C27B0;
    background-color: #2D2D2D;
}

QComboBox:focus {
    border-bottom: 2px solid #9C27B0;
}

QComboBox::drop-down {
    border: none;
    width: 30px;
    background-color: transparent;
}

